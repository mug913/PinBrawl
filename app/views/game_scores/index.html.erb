<h1> <%= @user.username%>'s Score Log: </h1>
<html>
<body>

    <% @scores.each do |s|%>
    <%=s.score%> 
    <%=s.game_table.name%>
    <%=s.score_date.strftime("%D")%>  
    <br>
    <%end%>

        <%= form_tag(user_game_scores_path, method: :get) do %>
            <%= collection_select :search, :search.to_s, GameTable.all, :name, :name %>
        <%= submit_tag ('Search') %>
    <%end%>

    <%= link_to 'Return', user_path(@user)%>
    </body>
</html>